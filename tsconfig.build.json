{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        // module settings
        "module": "commonjs",

        // emit settings
        "target": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": false,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,

        // type checks
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["build.ts", "tsc.ts"]
}
