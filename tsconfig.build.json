{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        // module settings
        "module": "commonjs",
        "lib": ["ES2023"],

        // emit settings
        "target": "ESNext",
        "sourceMap": true,
        "declaration": false,
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "outDir": "./",
        "noEmit": false,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,

        // type checks
        "typeRoots": ["node_modules/@types"]
    },
    "files": ["build.ts", "tsc.ts"],
    "include": []
}
